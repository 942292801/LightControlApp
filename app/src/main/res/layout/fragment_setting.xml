<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context="com.example.lightcontrolapp.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_blur"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_blur"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/user_line"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_centerHorizontal="true"
                android:background="@color/Balck"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/user_line"
                android:textSize="17sp"
                android:textColor="@color/Balck"
                android:text="GZAIRUIS"/>

            <TextView
                android:id="@+id/user_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="17sp"
                android:textColor="@color/Balck"
                android:layout_toRightOf="@id/user_line"
                android:text="13719262605"/>
        </RelativeLayout>

    </RelativeLayout>

    <com.example.lightcontrolapp.View.MenuItemLayout
        android:id="@+id/zhanghu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:divide_line_style="0"
        app:icon_reference="@drawable/img_setting_zhanghu"
        app:hint_text="登录"
        app:title_text="账户" />

    <com.example.lightcontrolapp.View.MenuItemLayout
        android:id="@+id/liangdushezhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:divide_line_style="1"
        app:icon_reference="@drawable/img_setting_liangdu"
        app:hint_text="0%-100%"
        app:title_text="亮度初始设置" />

    <com.example.lightcontrolapp.View.MenuItemLayout
        android:id="@+id/sewenshezhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:divide_line_style="1"
        app:icon_reference="@drawable/img_setting_sewen"
        app:hint_text="3000-6000"
        app:title_text="色温初始设置" />

    <com.example.lightcontrolapp.View.MenuItemLayout
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:divide_line_style="2"
        app:icon_reference="@drawable/img_setting_banben"
        app:hint_text="当前版本"
        app:title_text="版本" />

    <com.example.lightcontrolapp.View.MenuItemLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:divide_line_style="1"
        app:icon_reference="@drawable/img_setting__guanyu"
        app:hint_text="问题提交"
        app:title_text="关于" />


