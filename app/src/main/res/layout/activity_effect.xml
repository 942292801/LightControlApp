<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_90"
        android:id="@+id/pop_title"
        tools:ignore="MissingConstraints"
        android:background="@color/SmokeWhite">


        <Button
            android:id="@+id/pop_back"
            android:layout_width="@dimen/w_130"
            android:layout_height="@dimen/h_50"
            android:layout_marginTop="@dimen/h_10"
            android:layout_marginBottom="@dimen/h_10"
            android:layout_marginLeft="@dimen/h_10"
            android:background="@drawable/btn_gray"
            android:textSize="11sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="返回"

            />

        <TextView
            android:id="@+id/spinner_sp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h_50"
            android:layout_marginTop="@dimen/h_10"
            android:layout_centerInParent="true"
            android:textColor="@color/Balck"
            android:textSize="16sp"
            android:text="效果设置"
            />

        <Button
            android:id="@+id/pop_add"
            android:layout_width="@dimen/w_130"
            android:layout_height="@dimen/h_50"
            android:background="@drawable/btn_gray"
            android:layout_marginTop="@dimen/h_10"
            android:layout_marginBottom="@dimen/h_10"
            android:layout_marginRight="@dimen/h_10"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="添加"

            />
    </RelativeLayout>

    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/pop_recycler"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/pop_title"
        />-->

    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:id="@+id/pop_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pop_title"
        >
    </com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>


</RelativeLayout>