<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7A04080C"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/setting_item_bg"
        android:layout_height="70dp">
        <!--假设这个textview是主view-->
        <ImageView
            android:id="@+id/iv_lunyinview_playicon"
            android:src="@drawable/img_scene_on"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/w_20"/>
        <TextView
            android:id="@+id/recycler_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="测试swipeRecycler"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/w_40"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/recycler_time"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:text="00:59"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/w_40"
            android:textSize="32sp"
            android:textColor="#000000"
            android:layout_height="70dp" />


    </LinearLayout>



    <!--这是分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorPrimary"/>
</LinearLayout>