<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/h_10"
    android:paddingRight="@dimen/h_20"
    android:paddingLeft="@dimen/h_20"
    android:paddingBottom="@dimen/h_10">




    <GridView
        android:id="@+id/gv_control"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_560"
        android:horizontalSpacing="@dimen/h_5"
        android:numColumns="5"
        android:listSelector="@android:color/transparent"
        android:verticalSpacing="@dimen/h_10"
        android:layout_marginTop="@dimen/h_10"/>

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h_10"
        android:textColor="@color/colorBalck"
        android:text="亮度:100%"
        android:layout_marginBottom="@dimen/h_10"/>


    <SeekBar
        android:id="@+id/sb_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:splitTrack="false"
        android:min="0"
        android:progressDrawable="@drawable/seebar_nuan"
        />

    <TextView
        android:id="@+id/tv_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/h_20"
        android:textColor="@color/colorBalck"
        android:text="色温: 0K"
        android:layout_marginBottom="@dimen/h_10"/>


    <SeekBar
        android:id="@+id/sb_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="3000"
        android:splitTrack="false"
        android:min="0"
        android:progressDrawable="@drawable/seebar_len"
        />

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="@dimen/h_80"
     android:layout_marginTop="@dimen/h_20"
     >

     <Button
         android:id="@+id/btn_on"
         android:layout_width="@dimen/w_130"
         android:layout_height="@dimen/h_50"
         android:background="@drawable/btn_gray"
         android:textSize="11sp"
         android:layout_marginLeft="@dimen/h_150"
         android:text="开"
         />



     <Button
         android:id="@+id/off"
         android:layout_width="@dimen/w_130"
         android:layout_height="@dimen/h_50"
         android:background="@drawable/btn_gray"
         android:textSize="11sp"
         android:layout_alignParentRight="true"
         android:layout_marginRight="@dimen/h_150"
         android:text="关"
         />

 </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_80"
        >

        <Button
            android:id="@+id/btn_singelctrl"
            android:layout_width="@dimen/w_130"
            android:layout_height="@dimen/h_50"
            android:background="@drawable/btn_gray"
            android:textSize="11sp"
            android:layout_alignParentLeft="true"
            android:text="单控"


            />

        <Button
            android:id="@+id/btn_groudctrl"
            android:layout_width="@dimen/w_130"
            android:layout_height="@dimen/h_50"
            android:background="@drawable/btn_gray"
            android:textSize="11sp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/w_20"
            android:layout_toRightOf="@+id/btn_singelctrl"
            android:text="群控"
            />

        <Button
            android:id="@+id/btn_allselect"
            android:layout_width="@dimen/w_130"
            android:layout_height="@dimen/h_50"
            android:background="@drawable/btn_gray"
            android:textSize="11sp"
            android:layout_marginRight="@dimen/w_20"
            android:layout_toLeftOf="@+id/btn_clear"
            android:text="全选"
            />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="@dimen/w_130"
            android:layout_height="@dimen/h_50"
            android:background="@drawable/btn_gray"
            android:textSize="11sp"
            android:layout_alignParentRight="true"
            android:text="清除"
        />
    </RelativeLayout>




</LinearLayout >