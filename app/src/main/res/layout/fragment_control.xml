<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/h_10"
    android:paddingRight="@dimen/h_10"
    android:paddingLeft="@dimen/h_10"
    android:paddingBottom="@dimen/h_10">




    <GridView
        android:id="@+id/gv_control"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_600"
        android:horizontalSpacing="@dimen/h_3"
        android:numColumns="5"
        android:listSelector="@android:color/transparent"
        android:verticalSpacing="@dimen/h_5"
        android:layout_marginTop="@dimen/h_5"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_40"
        >

        <TextView
            android:id="@+id/control_light_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/h_20"
            android:textColor="@color/Balck"
            android:textSize="10sp"
            android:layout_marginLeft="10dip"
            android:text="0%"
            />

        <TextView
            android:id="@+id/control_light_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/h_10"
            android:textColor="@color/Balck"
            android:textSize="14sp"
            android:text="亮度: 100%"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/control_light_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/h_20"
            android:layout_marginRight="10dip"
            android:textColor="@color/Balck"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:text="100%"
            />

    </RelativeLayout>



    <SeekBar
        android:id="@+id/control_light_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:splitTrack="false"
        android:min="0"
        android:progressDrawable="@drawable/seebar_nuan"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_40"
        >

        <TextView
            android:id="@+id/control_sewen_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/h_20"
            android:layout_marginLeft="10dip"
            android:textColor="@color/Balck"
            android:textSize="10sp"
            android:text="3000K"
           />

        <TextView
            android:id="@+id/control_sewen_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/h_10"
            android:textColor="@color/Balck"
            android:textSize="14sp"
            android:text="色温: 0K"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/control_sewen_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/h_20"
            android:layout_marginRight="10dip"
            android:textColor="@color/Balck"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:text="6000K"
            />

    </RelativeLayout>
    <SeekBar
        android:id="@+id/control_sewen_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="6000"
        android:splitTrack="false"
        android:min="3000"
        android:progressDrawable="@drawable/seebar_len"
        />

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_marginTop="@dimen/h_20"
     >

     <Button
         android:id="@+id/control_btn_on"
         android:layout_width="@dimen/w_130"
         android:layout_height="@dimen/h_50"
         android:background="@drawable/btn_gray"
         android:textSize="11sp"
         android:layout_weight="1"
         android:text="开"
         android:layout_marginLeft="10dip"
         />

     <Button
         android:id="@+id/control_btn_off"
         android:layout_width="@dimen/w_130"
         android:layout_height="@dimen/h_50"
         android:background="@drawable/btn_gray"
         android:textSize="11sp"
         android:layout_weight="1"
         android:text="关"
         android:layout_marginLeft="20dip"
         />

     <Button
         android:id="@+id/control_btn_allselect"
         android:layout_width="@dimen/w_130"
         android:layout_height="@dimen/h_50"
         android:background="@drawable/btn_gray"
         android:textSize="11sp"
         android:layout_weight="1"
         android:text="全选"
         android:layout_marginLeft="20dip"
         />

     <Button
         android:id="@+id/control_btn_clear"
         android:layout_width="@dimen/w_130"
         android:layout_height="@dimen/h_50"
         android:background="@drawable/btn_gray"
         android:textSize="11sp"
         android:layout_weight="1"
         android:text="清除"
         android:layout_marginLeft="20dip"
         android:layout_marginRight="10dip"
         />

 </LinearLayout>






</LinearLayout >